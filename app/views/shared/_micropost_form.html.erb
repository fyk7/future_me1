<%= form_for(@micropost_form) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-controll">
    <%= f.text_area :content, class: "form-controll col-10 content", id: 'content', rows: "4" , placeholder: "過去の自分にアドバイスをつぶやこう！... 　#ハッシュタグ" %>
  </div>画像の投稿
  <%= f.file_field :picture, class: "btn btn-light", accept: 'image/jpeg,image/gif,image/png' %><br>
    投稿対象 =>
    <%= f.select :micropost_category,[["大学1~2年", 1], ["大学2~3年", 2], ["大学3~4年", 3], 
    ["就活中", 4], ["社会人ルーキー", 5], ["社会人ミドル", 6]] %>
    <%= f.submit "投稿", class: "btn btn-primary" %>
    </span>
<% end %>


<script type="text/javascript">
  $('#micropost_picture').bind('change', function() { 
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('ファイルのサイズが5MBを超えています。サイズを小さくしてしてください。');
    }
  });
</script>