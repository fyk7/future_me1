<% @microposts.each do |micropost| %>
    <div class="posts-index-item">
      <div class="post-left">
        <img src = "<%="/user_images/#{micropost.user.image_name}"%>">
      </div>
      <div class="post-right">
        <div class="post-user-name">
          <%= link_to(micropost.user.name, "/users/#{micropost.user.id}") %>
          <% micropost_categorys = {1=>"大学1~2年", 2=>"大学2~3年", 3=>"大学3~4年", 4=>"就活中", 5=>"社会人ルーキー", 6=>"社会人ミドル"} %>
          for <%= micropost_categorys[micropost.micropost_category] %>
        </div>
        <%= link_to(micropost.content, "/microposts/#{micropost.id}") %>
      </div>
      <%= image_tag micropost.picture.url if micropost.picture? %>
        <span class="timestamp">
        ♥<%= micropost.likes.count%>
          <%= micropost.created_at%>
          <% if current_user?(micropost.user) %>
            <%= link_to "編集", "/microposts/#{micropost.id}/edit" %>
            <%= link_to "削除", micropost, method: :delete,　data: { confirm: "本当に削除しますか?" } %>
          <% end %>
        </span>
    </div>
  <% end %>
  