<div class="post-show"> 
  <div class="microposts-wrap">
    <div class="posts-index-item">
      <div class="post-left">
        <% if @micropost.user.image?%>
        <%= image_tag @micropost.user.image.url, :size =>'120x120' %>
        <% else %>
        <img src = "<%="/user_images/#{@micropost.user.image_name}"%>" width="120"" height="120">
        <% end %>
      </div>
    </div>
    <h3>投稿詳細</h3>
    <%= render 'shared/micropost_show'%>
  </div>
</div>