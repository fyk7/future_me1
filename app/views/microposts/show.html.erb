<div class="post-show"> 
  <div class="microposts-wrap">
    <div class="posts-index-item">
      <div class="post-left">
        <% if @user.image?%>
        <%= image_tag @user.image.url, :size =>'120x120' %>
        <% else %>
        <img src = "<%="/user_images/#{@user.image_name}"%>" width="120"" height="120">
        <% end %>
      </div>
    </div>
    <h3>最近の投稿</h3>
    <%= render 'shared/many_microposts2' %>
    <%= @microposts.content%>
  </div>
</div>