
<%= search_form_for @q do |f| %>
  <div class="col-10">
  <%= f.label :content, "投稿キーワード"%>
  <%= f.search_field :content_cont, class:"form-control",placeholder: "キーワード"  %><br>

  <%= f.label :投稿カテゴリー %><br>
  <%= f.radio_button :micropost_category_eq, '', {:checked => true} %>指定なし<br>
  <%= f.radio_button :micropost_category_eq, 1 %>大学1~2年
  <%= f.radio_button :micropost_category_eq, 2 %>大学2~3年
  <%= f.radio_button :micropost_category_eq, 3 %>大学3~4年
  <%= f.radio_button :micropost_category_eq, 4 %>就活中
  <%= f.radio_button :micropost_category_eq, 5 %>社会人ルーキー
  <%= f.radio_button :micropost_category_eq, 6 %>社会人ミドル

  <br>
  <%= f.label :いいねの数 %>
  <%= f.number_field :likes_count_gteq, class:"form-control",placeholder: "いいね数"  %>
  <br>
  <div class="float-right">
  <%= f.submit "検索", class: "btn btn-info" %>
  </div>
  </div>
<% end %>

<div class="row col-10 ">
      <div class="btn btn-light">
        <%= sort_link(@q, :created_at, "投稿順並びかえ", class: "text-light") %>
      </div>

      <div class="btn btn-light">
        <%= sort_link(@q, :likes_count, "いいね順並び替え") %>
      </div>
  </div> 
 
