<% provide(:title, @user.name) %>
<div class="profile">
  <div class="users-wrap">
    <div class="user-left">
      <% if @user.image?%>
      <%= link_to((image_tag @user.image.url, :size =>'100x100'), @user )%>
      <% else %>
      <a href="/users/<%= @user.id%>"><img src="<%="/user_images/#{@user.image_name}"%>" width="100" height="100"></a>
      <% end %>
    </div>
    <%= @user.name%>

    <div>
    <p>トークルーム一覧<p><br>
    </div>
    
  </div>
</div>
<section class="stats">
  <%= render 'shared/stats' %>
</section>
<%= render 'follow_form' if logged_in? %>

<% if @user.id == current_user.id %>

<% else %>
  <% if @isRoom == true %>
    <p><a href="/rooms/<%= @roomId %>">チャットへ</a>
  <% else %>
    <%= form_for @room do |f| %>
      <%= fields_for @entry do |e| %>
        <%= e.hidden_field :user_id, :value=> @user.id %>
      <% end %>
      <%= f.submit "チャットを始める" %>
    <% end %>
  <% end %>
<% end %>

<%= link_to "ユーザー一覧に戻る", users_path %>

<div class="microposts-wrap">
  <% if @user.microposts.any? %>
    <h3><%= @user.microposts.count %>件のコメント</h3>
    <%= render 'shared/many_microposts2' %>
    <%= paginate @microposts %>
  <% end %>
</div>


