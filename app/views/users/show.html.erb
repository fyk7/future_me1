<% provide(:title, @user.name) %>
<div class="profile">
<div class="users-wrap">
  <div class="user-left">
    <img src = "<%="/user_images/#{@user.image_name}"%>">
    </div>
    <%= @user.name%>
</div>

  <div class="microposts-wrap">
    <% if @user.microposts.any? %>
      <h3><%= @user.microposts.count %>件のコメント</h3>
      <% @microposts.each do |micropost| %>
        <div class="posts-index-item">
          <div class="post-left">
            <%#= gravatar_for(micropost.user) %>
            <img src = "<%="/user_images/#{micropost.user.image_name}"%>">
          </div>
          <div class="post-right">
            <div class="post-user-name">
              <%= link_to(micropost.user.name, "/users/#{micropost.user.id}") %>
            </div>
            <%= link_to(micropost.content, "/microposts/#{micropost.id}") %>
            <%= image_tag micropost.picture.url if micropost.picture? %>
            <span class="timestamp">
            ♥<%= micropost.likes.count%>
              <%#= time_ago_in_words(micropost.created_at) %> 
              <%= micropost.created_at%>
              <% if current_user?(micropost.user) %>
              <%= link_to "編集", "/microposts/#{micropost.id}/edit" %>
              <%= link_to "削除", micropost, method: :delete,　data: { confirm: "本当に削除しますか?" } %>
            <% end %>
            </span>
          </div>
        </div>
      <% end %>
      <%= paginate @microposts %>
    <% end %>
  </div>
</div>