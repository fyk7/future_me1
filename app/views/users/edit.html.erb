<% provide(:title, "アカウントの更新") %>
<% provide(:button_text, 'アカウントの更新') %>
<div class="users-wrap">

<%= form_for(@user, {multipart: true}) do |f| %>
  <div class="container">
    <div class="row">
      <div class="">
      <%= render 'shared/error_messages', object: f.object %>
        <div class="card">
          <div class="card-header text-center">
            <h2><%= yield(:button_text) %></h2>
          </div>
          <div class="card-body">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>

            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control' %>

            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control' %>

            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>

            <%= f.label :user_category %><br>
            <%= f.radio_button :user_category, :大学生活前半 %>
            <%= f.label :大学生活前半, class: "job_type_label" %>
            <%= f.radio_button :user_category, :大学生活後半 %>
            <%= f.label :大学生活後半, class: "job_type_label" %>
            <%= f.radio_button :user_category, :就活中 %>
            <%= f.label :就活中, class: "job_type_label" %><br>
            <%= f.radio_button :user_category, :社会人ルーキー %>
            <%= f.label :社会人ルーキー, class: "job_type_label" %>
            <%= f.radio_button :user_category, :社会人ミドル %>
            <%= f.label :社会人ミドル, class: "job_type_label" %>
            <%= f.radio_button :user_category, :その他 %>
            <%= f.label :その他, class: "job_type_label" %>

            <% if current_user%>
              <p>プロフィール画像の更新</p>
              <p><%= f.file_field :image, class: 'form-control' %></p> 
            <% end%>
            <div class="text-right">
      　　     <%= f.submit yield(:button_text), class: "btn btn-success " %>
      　　   </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
  
<% end %>
