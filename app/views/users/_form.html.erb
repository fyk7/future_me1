<%= form_for(@user, {multipart: true}) do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
      </div>
      <div class="col-md-6 col-md-offset-3">
      <%= render 'shared/error_messages', object: f.object %>
        <div class="card">
          <div class="card-header">
            <h1><%= yield(:button_text) %></h1>
          </div>
          <div class="card-body">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>

            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control' %>

            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control' %>

            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
            
            <%= f.label :user_category %><br>
            <%= f.radio_button :user_category, :大学生活前半 %>
            <%= f.label :大学生活前半, class: "job_type_label" %>
            <%= f.radio_button :user_category, :大学生活後半 %>
            <%= f.label :大学生活後半, class: "job_type_label" %>
            <%= f.radio_button :user_category, :就活中 %>
            <%= f.label :就活中, class: "job_type_label" %><br>
            <%= f.radio_button :user_category, :社会人ルーキー %>
            <%= f.label :社会人ルーキー, class: "job_type_label" %>
            <%= f.radio_button :user_category, :社会人ミドル %>
            <%= f.label :社会人ミドル, class: "job_type_label" %>
            <%= f.radio_button :user_category, :その他, checked: true %>
            <%= f.label :その他, class: "job_type_label" %>
            <div class="text-right">
      　　     <%= f.submit yield(:button_text), class: "btn btn-success " %>
      　　   </div>
          </div>
        </div>
        <% if current_user%>
          <p>プロフィール画像の更新</p>
          <p><%= f.file_field :image, class: 'form-control' %></p>
        <% end%>
      </div>
    </div>
  </div>
  
<% end %>
