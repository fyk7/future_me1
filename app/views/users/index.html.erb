<% provide(:title, 'All users') %>
<div class="users-wrap">
<h1 class="users-heading">ユーザー一覧</h1>
  <% @users.each do |user| %>
    
    <div class="card mb-3" style="max-width: 540px; ">
      <div class="row no-gutters">
        <div class="col-md-3">
          <% if user.image?%>
          <%= link_to((image_tag user.image.url, :size =>'130x140'), user )%>
          <% else %>
          <a href="/users/<%= user.id%>"><img src="<%="/user_images/#{user.image_name}"%>" width="130" height="140"></a>
          <% end %>
        </div> 
        <div class="col-md-9">
          <div class="card-body">
            <h5 class="card-title"><%= link_to user.name, user %></h5>
            <% user_categorys = {1=>"大学1~2年", 2=>"大学2~3年", 3=>"大学3~4年", 4=>"就活中", 5=>"社会人ルーキー", 6=>"社会人ミドル"} %>
            <p class="card-text"><%= user_categorys[user.user_category] %></p>

            <section class="stats">
              <% user ||= current_user %>
              <div class="stats">
                <a href="<%= followers_user_path(user) %>">
                  <strong id="followers" class="stat">
                    <%= user.followers.count %>
                  </strong>
                  フォロワー
                </a>
              </div>
            </section>

            <p class="card-text"><small class="text-muted"><%= user.created_at.strftime("%Y-%m-%d ")%>から利用しています。</small></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <%= paginate @users %>
</div>