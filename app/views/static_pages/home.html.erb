<% if logged_in? %>
  <div class="home-upper row">
    <div class="home-upper-left">
      <%= render 'shared/user_info' %>
    </div>
    <div class="home-upper-right">
      <%= render 'shared/micropost_form' %>
    </div>
  </div>
  <div class="microposts-wrap" style="padding-top: 150px;">
    <div class="text-center">
      <h3>最近の投稿</h3>
    </div>
    <%= render 'shared/many_microposts2' %>
    <%= paginate @microposts %>
  </div>
  
<% else %>
  <div class="top-wrapper background-image">
  <div class="container-top">
    <h1>future⇀me へようこそ！</h1>
    <h2>future⇀meは過去の自分に対して、<br>アドバイスを投稿できるアプリです。<br><br>過去にやって良かった事、やらなくて後悔したことをつぶやいて、<br>他の人に後悔のない人生を送ってもらおう！</h2>
    <div class="btn-wrapper mx-auto">
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.hidden_field :email, {value: 'test@testuser1.com'} %>
      <%= f.hidden_field :password, {value: 'password'} %>
      <%= f.submit "簡単ログイン!!", class: "btn-easy-login", style: "color: white;" %>
    <% end %>
    <%= link_to "新規登録はこちら", signup_path, class: "btn btn-success" %>
    <p>or sign up with</p>
    <a class="btn-twitter twitter" href="#">
      <i class="fab fa-twitter"></i>Twitterで登録
    </a>
    </div>
  </div>
  </div>
<% end %>
