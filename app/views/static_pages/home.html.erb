<% if logged_in? %>
  <div class="home-wrap">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="microposts-wrap">
      <h3>直近の投稿</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="top-wrapper">
  <div class="container-top">
    <h1>Future^me へようこそ！</h1>
    <h2>未来の"自分"からアドバイスをGETしよう！</h2>
    <div class="btn-wrapper">
　  <a><%= link_to "新規登録はこちら", signup_path, class: "btn signup" %></a>
    <a><%= link_to "お試しログイン", login_path, class: "btn signup-test" %></a>
    <p>or sign up with</p>
    <a class="btn facebook" href="#">
      <span class="fa fa-facebook"></span>
      Facebookで登録
    </a>
    <a class="btn twitter" href="#">
      <span class="fa fa-twitter"></span>
      Twitterで登録
    </a>
    </div>
  </div>
  </div>
<% end %>
