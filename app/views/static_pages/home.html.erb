<% if logged_in? %>
  <div class="home-wrap">
    <div class="home-upper">
      <div class="home-upper-left">
        <%= render 'shared/user_info' %>
      </div>
      <div class="home-upper-right">
        <%= render 'shared/micropost_form' %>
      </div>
    </div>
    <div class="microposts-wrap">
      <h3>最近の投稿</h3>
      <% @all_user_microposts.each do |micropost| %>
        <div class="posts-index-item">
          <div class="post-left">
            <%= gravatar_for(micropost.user) %>
          </div>
          <div class="post-right">
            <div class="post-user-name">
              <%= link_to(micropost.user.name, "/users/#{micropost.user.id}") %>
            </div>
            <%= link_to(micropost.content, "#") %>
          </div>
          <%= image_tag micropost.picture.url if micropost.picture? %>
            <span class="timestamp">
              <%= time_ago_in_words(micropost.created_at) %> 
              <% if current_user?(micropost.user) %>
              <%= link_to "削除", micropost, method: :delete,　data: { confirm: "本当に削除しますか?" } %>
            <% end %>
            </span>
        </div>
      <% end %>
      <%= paginate @all_user_microposts %>
    </div>
    
  </div>
<% else %>
  <div class="top-wrapper">
  <div class="container-top">
    <h1>Future^me へようこそ！</h1>
    <h2>未来の"自分"からアドバイスをGETしよう！</h2>
    <div class="btn-wrapper">
　  <a><%= link_to "新規登録はこちら", signup_path, class: "btn signup" %></a>
    <a><%= link_to "お試しログイン", login_path, class: "btn signup-test" %></a>
    <p>or sign up with</p>
    <a class="btn facebook" href="#">
      <span class="fa fa-facebook"></span>
      Facebookで登録
    </a>
    <a class="btn twitter" href="#">
      <span class="fa fa-twitter"></span>
      Twitterで登録
    </a>
    </div>
  </div>
  </div>
<% end %>
